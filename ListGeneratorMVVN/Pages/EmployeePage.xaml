<Page x:Class="ListGenerator.EmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ListGenerator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeePage">

    <Grid>
        <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Twoje dzisiejsze zadania: " 
                       FontSize="32" 
                       Style="{StaticResource DefaultTextStyle}"/>
            <ScrollViewer Height="300" Margin="0,10 ">
            <ItemsControl ItemsSource="{Binding EmployeeList}" Margin="10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:Employee/>
                    </DataTemplate>  
                    
                </ItemsControl.ItemTemplate>  
            </ItemsControl>
            </ScrollViewer>
                
            <TextBlock Text="Tytuł zadania: " 
                       
                       Style="{StaticResource DefaultTextStyle}"/>
            <TextBox Text="{Binding NewWorkTaskTitle, Mode=TwoWay}"
                    Style="{StaticResource DefaultBoxStyle}" />
            <TextBlock Text="Opis zadania: "
                       
                       Style="{StaticResource DefaultTextStyle}"/>
            <TextBox Text="{Binding NewWorkTaskDescription, Mode=TwoWay}"
                     Style="{StaticResource DefaultBoxStyle}"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width ="*" />
                    <ColumnDefinition Width ="*" />

                </Grid.ColumnDefinitions>
                
                <Button Command="{Binding AddNewTaskToListCommand}"
                        Style="{StaticResource DefaultButtonStyle}"
                        Content="Dodaj"></Button>
                <Button Command="{Binding DeleteSelectedTasksCommand}" 
                        Grid.Column="1"
                        Style="{StaticResource DefaultButtonStyle}"
                        Content="Usuń"></Button>
            </Grid>

        </StackPanel>
        
    </Grid>
</Page>
